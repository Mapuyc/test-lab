<p id="notice"><%= notice %></p>

<div>
  <h1>Classes</h1>

  <table>
    <thead>
      <tr>
        <th>Teacher</th>
        <th>Name</th>
        <th>Duration</th>
        <th>Description</th>
        <th>Days</th>
        <th>Start time</th>
        <th>End time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sections.each do |section| %>
        <tr>
          <td><%= section.teacher.first_name + ' ' + section.teacher.last_name%></td>
          <td><%= section.subject.name %></td>
          <td><%= section.duration %></td>
          <td><%= section.subject.description %></td>
          <td><%= section.days.pluck(:name).join(', ') %></td>
          <td><%= section.start_time.strftime("at %I:%M%p") %></td>
          <td><%= section.end_time.strftime("at %I:%M%p") %></td>
          <td><%= link_to 'Add', enrollments_path(enrollment: { section_id: section.id }), method: :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

<div>
  <h1>Enrolments</h1>

  <table>
    <thead>
      <tr>
        <th>Teacher</th>
        <th>Name</th>
        <th>Duration</th>
        <th>Description</th>
        <th>Days</th>
        <th>Start time</th>
        <th>End time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @enrollments.each do |enrollment| %>
        <tr>
          <td><%= enrollment.section.teacher.first_name + ' ' + enrollment.section.teacher.last_name%></td>
          <td><%= enrollment.section.subject.name %></td>
          <td><%= enrollment.section.duration %></td>
          <td><%= enrollment.section.subject.description %></td>
          <td><%= enrollment.section.days.pluck(:name).join(', ') %></td>
          <td><%= enrollment.section.start_time.strftime("at %I:%M%p") %></td>
          <td><%= enrollment.section.end_time.strftime("at %I:%M%p") %></td>
          <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>